<section>

  <div class="container mt-3">

    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Options</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
        <tr>
          <th scope="row">{{@index}}</th>
          <td>{{this.Fullname}}</td>
          <td>{{this.mailid}}</td>


          <td>
            {{#if isBlocked}}
            <a href="/admin/unblock/{{this._id}}" class="btn btn-primary">Unblock</a>
            
            {{else}}
            <a href="/admin/block/{{this._id}}" class="btn btn-primary">Block</a>
          
          </td>
          {{/if}}
        </tr>
        {{/each}}
      </tbody>
    </table>

    <a href="/admin" class="btn btn-primary">Home</a>
  </div>
</section>