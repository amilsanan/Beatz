<!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="filter__controls">
                        <li class="active" data-filter="*">Best Sellers</li>
                        <li data-filter=".new-arrivals">New Arrivals</li>
                        <li data-filter=".hot-sales">Hot Sales</li>
                    </ul>
                </div>
            </div>

            <div class="row product__filter">
                {{#each products}}
                <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix new-arrivals">

                    <div class="product__item">
                        <div class="product__item__pic set-bg" data-setbg="/product-images/{{this.product._id}}.jpg">
                            <span class="label">New</span>
                            <ul class="product__hover">
                                <li><a onclick="addToWishlist('{{this.product._id}}')"><img src="/userAssets/img/icon/heart.png" alt=""></a></li>
                               
                        </div>
                        <div class="product__item__text">

                            <h6>{{this.proName}}</h6>

                            <button onclick="addToCart('{{this._id}}')" class="add-cart">+ Add To Cart</button>
                            <div class="rating">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                            </div>
                            <h5>{{this.Price}}</h5>

                        </div>
                    </div>

                </div>
                {{/each}}
            </div>
        </div>
    </section>
    <!-- Product Section End -->